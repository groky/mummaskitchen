
<h1><%= @title %></h1>

<%= form_for :customer do |f| %>
	<%= f.label :name %> <br />
	<%= f.text_field :name, :class=>"round"%> <br />
	<%= f.label :surname %> <br />
	<%= f.text_field :surname, :class=>"round"%> <br />
	<%= f.label :phone %> <br />
	<%= f.text_field :phone, :class=>"round"%> <br />
	<%= f.label :email %> <br />
	<%= f.text_field :email, :class=>"round"%> <br />
	<%= f.label :password %> <br />
	<%= f.password_field :password, :class=>"round"%> <br />
	
	<%= f.submit "Register" %>
<%end%>