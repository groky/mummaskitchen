<errors>
	<%=flash[:notice] if @flash.nil? && flash[:notice].present? %>
</errors>
<h1><%= @header %></h1>
<% if !@dishes.nil? %>

<%=will_paginate @dishes, :params=>{:search=>@search}%>
<ul>
	
	<% @dishes.each do |d| %>
	<li class="box round">
		<table width="670px">
			<tr class="round-top">
				<td colspan="7">
					<div class="item-head">
						<span><%= link_to d.name, "/dish/dish/#{d.id}" %></span>
					</div>
				</td>
			</tr>
			<tr>
			<td>
			<span>
				<small><%=truncate d.description%></small> <br />
				<% images = d.images(d.id)
					if !images.nil? && images.size>0 
						images.each do |image|%>
						<img class="round thumbnail" src="<%="/images/#{image.name}"%>"></img>&nbsp;
						<%end%>
					<%end%>
			</span>
		 	</td>

		<% d.prices(d.id, @where).each do |p| %>
			<td><%= p.size==2 ? "Medium" : "Large" %></td>
			<td>$<%=currency(p.price) %></td>
			<td class="add">
				<a href="/session/add/<%=d.menu_id %>/<%=p.dish_id %>/<%=p.id%>" class="plate">
					<% if p.quantity==0 %>
					<errors>N/A</errors>
					<%else%>
						Add to plate
					<%end%>
				</a>
			</td>
		<%end%>
		</tr>
		</table>
	</li>
	<%end%>
</ul>
<%=will_paginate @dishes%>
<%end%>