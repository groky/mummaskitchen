<div class="login">
<h1> <%= @title %> </h1>
<%=form_for :customer, :url=>url_for( :controller=> 'customer', :action=>'login' )  do |f| %>
	<%= f.label :email %> <br />
	<%= f.text_field :email, :class => "round" %> <br />
	<%= f.label :password %> <br />
	<%= f.password_field :password, :class => "round" %> <br />
	<%= f.submit "login" %>
<% end%>
<br />
<%= link_to "Register", "/register"%>
</div>
